<?xml version="1.0"?>
<ruleset name="ProjectStandard">
    <description>Project coding standard (PSR-12 base) excluding vendor & generated assets.</description>

    <!-- Base standard -->
    <rule ref="PSR12"/>

    <!-- Custom line length (soft limit) -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

    <!-- Exclusions: third-party, build artifacts, caches -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>public/build/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>resources/js/**/dist/*</exclude-pattern>
    <exclude-pattern>resources/js/**/generated/*</exclude-pattern>
</ruleset>
