################################################################################
# APPLICATION CONFIGURATION
################################################################################

APP_NAME="POS Faro"
APP_ENV=local
APP_DEBUG=true
APP_KEY=
APP_URL=http://localhost

APP_LOCALE=es_MX
APP_FALLBACK_LOCALE=en
APP_TIMEZONE=America/Mexico_City

################################################################################
# DATABASE CONFIGURATION
################################################################################
# Local Development (SQLite)
DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# Production (MySQL 8.0+)
# Uncomment below and configure for production environments
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=pos_faro
# DB_USERNAME=pos_user
# DB_PASSWORD=your_secure_password_here

################################################################################
# CACHE CONFIGURATION
################################################################################
# Supported: file, database, redis, memcached, dynamodb, null
# Database (default for development)
CACHE_STORE=database
CACHE_PREFIX=pos_

# Redis (recommended for production)
# CACHE_STORE=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_CACHE_DB=1

################################################################################
# QUEUE CONFIGURATION
################################################################################
# Supported: sync, database, redis, sqs, null
# Database (default for development - runs jobs immediately)
QUEUE_CONNECTION=database

# Redis (recommended for production - async job processing)
# QUEUE_CONNECTION=redis
# REDIS_QUEUE_HOST=127.0.0.1
# REDIS_QUEUE_PASSWORD=null
# REDIS_QUEUE_PORT=6379
# REDIS_QUEUE_DB=0

################################################################################
# SESSION CONFIGURATION
################################################################################
# Supported: cookie, database, memcached, redis
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

################################################################################
# FILE STORAGE CONFIGURATION
################################################################################
# Local storage (default for development)
FILESYSTEM_DISK=public

# S3 Storage (recommended for production)
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=pos-faro-bucket
# AWS_URL=https://bucket.s3.amazonaws.com
# AWS_VISIBILITY=public
# AWS_ENDPOINT=null

MEDIA_DISK=local

################################################################################
# MAIL/EMAIL CONFIGURATION
################################################################################
# Development (Log all emails to storage/logs)
MAIL_MAILER=log

# Production - SMTP Configuration (Gmail, SendGrid, etc.)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=noreply@pos-faro.com
# MAIL_FROM_NAME="${APP_NAME}"

# Production - SendGrid
# MAIL_MAILER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Production - Mailgun
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=mg.pos-faro.com
# MAILGUN_SECRET=key-xxx-xxx

# Production - AWS SES
# MAIL_MAILER=ses
# AWS_SES_REGION=us-east-1

MAIL_FROM_ADDRESS="noreply@pos-faro.com"
MAIL_FROM_NAME="${APP_NAME}"

################################################################################
# SMS CONFIGURATION
################################################################################
# Development (Log SMS to storage/logs)
SMS_FROM="+5215512345678"
SMS_DRIVER=log

# Production - Twilio
# SMS_DRIVER=twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_SMS=+1234567890
# TWILIO_STATUS_WEBHOOK_URL=https://pos-faro.com/webhooks/sms/status

# Production - Vonage (Nexmo)
# SMS_DRIVER=vonage
# VONAGE_API_KEY=your_api_key
# VONAGE_API_SECRET=your_api_secret
# VONAGE_FROM_SMS=POS Faro

################################################################################
# SWIFT AUTH 3 CONFIGURATION (Token-Based Authentication)
################################################################################
# Frontend Stack: typescript | javascript | blade
SWIFT_AUTH_FRONTEND=typescript

# Registration & URL Configuration
SWIFT_AUTH_ALLOW_REGISTRATION=false
SWIFT_AUTH_SUCCESS_URL=/dashboard
SWIFT_AUTH_TABLE_PREFIX=swift_auth_
SWIFT_AUTH_ROUTE_PREFIX=swift-auth

# Email Verification (optional)
SWIFT_AUTH_REQUIRE_VERIFICATION=false

# Session Configuration
# Idle timeout (seconds): 15 minutes default
SWIFT_AUTH_SESSION_IDLE_TIMEOUT=900
# Absolute timeout (seconds): 8 hours default
SWIFT_AUTH_SESSION_ABSOLUTE_TIMEOUT=28800
# Session cleanup enabled
SWIFT_AUTH_SESSION_CLEANUP_ENABLED=true
SWIFT_AUTH_SESSION_CLEANUP_GRACE=0
SWIFT_AUTH_SESSION_CLEANUP_CRON=daily

# Concurrent Session Limits (null = unlimited)
# SWIFT_AUTH_MAX_SESSIONS=3
# SWIFT_AUTH_SESSION_EVICTION=oldest  # oldest | newest

# Remember Me Configuration
SWIFT_AUTH_REMEMBER_ENABLED=true
SWIFT_AUTH_REMEMBER_COOKIE=swift_auth_remember
SWIFT_AUTH_REMEMBER_TTL=1209600  # 14 days
SWIFT_AUTH_REMEMBER_ROTATE=true
SWIFT_AUTH_REMEMBER_SECURE=true
SWIFT_AUTH_REMEMBER_SAMESITE=strict
# SWIFT_AUTH_REMEMBER_DOMAIN=null
SWIFT_AUTH_REMEMBER_PATH=/
SWIFT_AUTH_REMEMBER_POLICY=strict  # strict | lenient
SWIFT_AUTH_REMEMBER_ALLOW_SUBNET=true
SWIFT_AUTH_REMEMBER_SUBNET_MASK=24
# SWIFT_AUTH_REMEMBER_DEVICE_HEADER=X-Device-Id
SWIFT_AUTH_REMEMBER_REQUIRE_DEVICE=false

# Multi-Factor Authentication (MFA)
SWIFT_AUTH_MFA_ENABLED=false
SWIFT_AUTH_MFA_DRIVER=otp  # otp | webauthn
SWIFT_AUTH_MFA_VERIFICATION_URL=/mfa/verify
# SWIFT_AUTH_OTP_VERIFICATION_URL=/mfa/otp/verify
# SWIFT_AUTH_OTP_DRIVER=otp
# SWIFT_AUTH_WEBAUTHN_VERIFICATION_URL=/mfa/webauthn/verify
# SWIFT_AUTH_WEBAUTHN_DRIVER=webauthn

# Password Reset Configuration
SWIFT_AUTH_PASSWORD_RESET_TTL=900  # 15 minutes

# Account Lockout (Brute Force Protection)
SWIFT_AUTH_LOCKOUT_ENABLED=true

# Default Role Assignment (optional - role ID)
# SWIFT_AUTH_DEFAULT_ROLE_ID=2

# Security Headers
# SWIFT_AUTH_CSP="default-src 'self'; script-src 'self' 'unsafe-inline'"
# SWIFT_AUTH_PERMISSIONS_POLICY="geolocation=(), microphone=()"
# SWIFT_AUTH_COOP="same-origin"
# SWIFT_AUTH_COEP="require-corp"
# SWIFT_AUTH_CORP="same-origin"
# SWIFT_AUTH_REFERRER_POLICY=strict-origin-when-cross-origin

# Session & Token Configuration
SWIFT_AUTH_SESSION_IDLE_TIMEOUT=900
SWIFT_AUTH_SESSION_ABSOLUTE_TIMEOUT=28800
SWIFT_AUTH_SESSION_CLEANUP_ENABLED=true
SWIFT_AUTH_REMEMBER_ENABLED=true
SWIFT_AUTH_REMEMBER_TTL=1209600

# Security Configuration
SWIFT_AUTH_LOCKOUT_ENABLED=true
SWIFT_AUTH_LOCKOUT_THRESHOLD=5
SWIFT_AUTH_LOCKOUT_DURATION=600

# Multi-Factor Authentication (Optional)
SWIFT_AUTH_MFA_ENABLED=false
SWIFT_AUTH_REQUIRE_VERIFICATION=false

# Password Policy
SWIFT_AUTH_PASSWORD_MIN_LENGTH=8
SWIFT_AUTH_PASSWORD_RESET_TTL=900

################################################################################
# LOGGING & MONITORING
################################################################################
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=debug

# Log Sensitive Data
LOG_SENSITIVE=false

# Structured Logging (JSON format)
LOG_FORMAT=single

# Ray (Optional Remote Debugging)
RAY_ENABLED=false
RAY_HOST=127.0.0.1

# Sentry (Optional Error Tracking - Production)
# SENTRY_LARAVEL_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=${APP_ENV}
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_RELEASE=1.0.0

################################################################################
# VITE & FRONTEND CONFIGURATION
################################################################################
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL=http://localhost
VITE_ENABLE_DEVTOOLS=true

################################################################################
# MAINTENANCE MODE
################################################################################
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

################################################################################
# LOCALIZATION & FAKER
################################################################################
APP_FAKER_LOCALE=es_MX

# Previous encryption keys (for rotating APP_KEY)
APP_PREVIOUS_KEYS=

################################################################################
# RATE LIMITING & SECURITY
################################################################################
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AUTH_ATTEMPTS=5

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_EXPOSE_HEADERS=Authorization
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

################################################################################
# SANCTUM API TOKEN CONFIGURATION
################################################################################
# Stateful domains that can receive stateful API authentication cookies
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Token expiration in minutes (null = never expires)
# SANCTUM_EXPIRATION=null

################################################################################
# FEATURE FLAGS
################################################################################
# Audit Logging
FEATURE_AUDIT_LOGGING=true

# Advanced Reporting
FEATURE_ADVANCED_REPORTS=true

# Inventory Management
FEATURE_INVENTORY_TRACKING=true

# Multi-warehouse Support
FEATURE_MULTI_WAREHOUSE=true

################################################################################
# THIRD-PARTY INTEGRATIONS (Optional)
################################################################################

# AWS Services
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# Slack Notifications
# SLACK_BOT_USER_OAUTH_TOKEN=
# SLACK_BOT_USER_DEFAULT_CHANNEL=#pos-alerts
# SLACK_WEBHOOK_URL=

# Google Cloud Services
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GOOGLE_CLOUD_PROJECT_ID=
# GOOGLE_CLOUD_STORAGE_BUCKET=

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=
# MIXPANEL_TOKEN=

################################################################################
# BIRD FLOCK (Queue Management)
################################################################################
# Only needed if using Bird Flock package
BIRD_FLOCK_DEFAULT_QUEUE=default
BIRD_FLOCK_TABLE_PREFIX=bird_flock_
BIRD_FLOCK_LOGGING_ENABLED=true
BIRD_FLOCK_DLQ_ENABLED=true
BIRD_FLOCK_MAX_PAYLOAD_SIZE=262144
BIRD_FLOCK_BATCH_INSERT_CHUNK_SIZE=500
BIRD_FLOCK_HEALTH_ENABLED=true

# Circuit Breaker Pattern
BIRD_FLOCK_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
BIRD_FLOCK_CIRCUIT_BREAKER_TIMEOUT=60
BIRD_FLOCK_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2

# Retry Configuration
BIRD_FLOCK_SMS_MAX_ATTEMPTS=3
BIRD_FLOCK_SMS_BASE_DELAY_MS=1000
BIRD_FLOCK_SMS_MAX_DELAY_MS=60000

################################################################################
# DEVELOPMENT & DEBUG TOOLS
################################################################################

# Telescope (Laravel Debug Tool)
# TELESCOPE_ENABLED=true
# TELESCOPE_STORAGE=database

# Debugbar (Query & Profiling)
# DEBUGBAR_ENABLED=true

# PsySH REPL
# PSYSH_ENABLED=true

################################################################################
# PRODUCTION CHECKLIST
################################################################################
# Before deploying to production, ensure:
# 1. APP_ENV=production
# 2. APP_DEBUG=false
# 3. APP_KEY is set (run: php artisan key:generate)
# 4. Database is configured (MySQL 8.0+)
# 5. Redis is configured for Cache/Queue
# 6. Mail driver is configured (SMTP/SendGrid/etc)
# 7. SMS driver is configured (Twilio/Vonage/etc)
# 8. File storage is configured (S3/local with backups)
# 9. Sentry/Error tracking is enabled
# 10. SSL/TLS is enabled (HTTPS)
# 11. All sensitive values are in .env (not in .env.example)
# 12. Backups are configured and tested
# 13. Monitoring and alerts are set up
# 14. Logging is configured for JSON output
# 15. Rate limiting and CORS are properly configured
